<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10sp"
        tools:context=".Mis_datos">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="20dp"
                  android:id="@+id/texto_misDatos"
                  android:textStyle="bold"
                  android:text="Mis Datos"/>
        <ImageButton android:background="@drawable/icon_ayuda" android:id="@+id/btn_ayuda" android:layout_toRightOf="@+id/texto_misDatos" android:layout_marginLeft="50dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="460sp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textStyle="bold" android:textSize="15dp"
                      android:text="Nombre:"/>
            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/misDatos_nombre"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textStyle="bold" android:textSize="15dp"
                      android:text="Apellidos:"/>
            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/misDatos_apellidos"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textStyle="bold" android:textSize="15dp"
                      android:text="NIF/CIF/NIE Empresa"/>
            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/misDatos_id_empresa"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textStyle="bold" android:textSize="15dp"
                      android:text="Nombre empresa:"/>
            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/misDatos_nombre_empresa"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textStyle="bold" android:textSize="15dp"
                      android:text="Direccion empresa:"/>
            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/misDatos_direccion_empresa"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textStyle="bold" android:textSize="15dp"
                      android:text="Codigo postal empresa:"/>
            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/misDatos_cp_empresa"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textStyle="bold" android:textSize="15dp"
                      android:text="PoblaciÃ³n empresa:"/>
            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/misDatos_poblacion_empresa"/>




        </LinearLayout>

    </ScrollView>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center"
                  android:layout_marginTop="10sp"
                  android:orientation="horizontal">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="volver"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="guardar"/>

    </LinearLayout>
</LinearLayout>