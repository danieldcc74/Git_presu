<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondogeneral"
        android:orientation="vertical"
        tools:context=".PresupuestoActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <LinearLayout
                    android:padding="10sp"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:gravity="right"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="NUMERO DE FACTURA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <EditText
                        android:id="@+id/nFactura"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textStyle="bold"
                        android:text="Fecha de factura"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <EditText
                        android:id="@+id/fechFactura"
                        android:gravity="right"
                        android:inputType="date"
                        android:hint="dd/mm/yyyy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <View
                        android:layout_width="fill_parent"
                        android:layout_height="3dp"
                        android:background="@android:color/black"/>

            </LinearLayout>
            <LinearLayout
                    android:padding="10sp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/titulodescripcion"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="DESCRIPCIÓN DEL TRABAJO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:id="@+id/direccionReforma"
                        android:hint="Dirección de reforma"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <EditText
                        android:id="@+id/encargado"
                        android:inputType="text"
                        android:hint="Encargado de la reforma"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                  <EditText
                          android:hint="Modo de pago"
                          android:id="@+id/modoPago"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>




               <EditText
                       android:hint="¿Es necesario licencia de obra?"
                       android:id="@+id/licencia"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
                <EditText
                        android:id="@+id/detallesDelTrabajo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Detalles del trabajo"
                        android:inputType="textMultiLine"
                        android:longClickable="false" />
                <EditText
                       android:id="@+id/CantidadTrabajadores"
                        android:hint="¿Cuántos trabajadores hacen falta?"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                <EditText
                        android:id="@+id/precioTrabajadorDia"
                        android:inputType="number"
                        android:hint="Precio por dia de los trabajadores(Dia/€)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <EditText
                        android:id="@+id/diasFinalizacion"
                        android:inputType="number"
                        android:hint="Dias estimados en terminar la reforma"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <EditText
                        android:id="@+id/precioGasto"
                        android:inputType="number"
                        android:hint="¿Cuánto tiene pensado invertir en la reforma?"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:id="@+id/precioCobrar"
                        android:inputType="number"
                        android:hint="Precio sin IVA de la reforma"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <EditText
                        android:id="@+id/iva"
                        android:inputType="number"
                        android:hint="Porcentaje de IVA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <Button
                        android:id="@+id/btnSiguienteDescripcion"
                        android:text="Siguiente"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
