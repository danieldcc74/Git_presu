<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Presupuesto_Activity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <LinearLayout
                    android:padding="10sp"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:gravity="right"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="NUMERO DE FACTURA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <EditText
                        android:id="@+id/nFactura"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textStyle="bold"
                        android:text="Fecha de factura"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <EditText
                        android:id="@+id/fechFactura"
                        android:gravity="right"
                        android:inputType="date"
                        android:hint="dd/mm/yyyy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <View
                        android:layout_width="fill_parent"
                        android:layout_height="3dp"
                        android:background="@android:color/black"/>

            </LinearLayout>
            <LinearLayout
                    android:padding="10sp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="DESCRIPCIÓN DEL TRABAJO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:id="@+id/direccionReforma"
                        android:hint="Dirección de reforma"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <EditText
                        android:id="@+id/encargado"
                        android:inputType="text"
                        android:hint="Encargado de la reforma"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textStyle="bold"
                        android:text="Modo de pago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <RadioGroup
                        android:id="@+id/rgButton1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <RadioButton
                            android:id="@+id/rgEfectivo"
                            android:hint="Efectivo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <RadioButton
                            android:id="@+id/rgTranferencia"
                            android:hint="Tranferencia bancaria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </RadioGroup>
                <TextView
                        android:textStyle="bold"
                        android:text="¿Es necesario licencia de obra?"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <RadioGroup
                        android:id="@+id/rgButton2"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <RadioButton
                            android:id="@+id/rg2Si"
                            android:hint="Si"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <RadioButton
                            android:id="@+id/rg2No"
                            android:hint="No"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </RadioGroup>
                <TextView
                        android:textStyle="bold"
                        android:text="¿Cuántos trabajadores hacen falta?"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <RadioGroup
                        android:id="@+id/rgNtrabajadadores"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <RadioButton
                            android:id="@+id/rgItem1"
                            android:hint="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <RadioButton
                            android:id="@+id/rgItem2"
                            android:hint="2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <RadioButton
                            android:id="@+id/rgItem3"
                            android:hint="3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <RadioButton
                            android:id="@+id/rgItem4"
                            android:hint="4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <RadioButton
                            android:id="@+id/rgItem5"
                            android:hint="5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <RadioButton
                            android:id="@+id/rgItemMas5"
                            android:hint="Más de 5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </RadioGroup>
                <EditText
                        android:id="@+id/precioTrabajadorDia"
                        android:inputType="number"
                        android:hint="Precio por dia de los trabajadores(Dia/€)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <EditText
                        android:id="@+id/diasFinalizacion"
                        android:inputType="number"
                        android:hint="Dias estimados en terminar la reforma"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <EditText
                        android:id="@+id/precioGasto"
                        android:inputType="number"
                        android:hint="¿Cuánto tiene pensado invertir en la reforma?"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:id="@+id/precioCobrar"
                        android:inputType="number"
                        android:hint="Precio sin IVA de la reforma"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <Button
                        android:id="@+id/btnSiguienteDescripcion"
                        android:text="Siguiente"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
