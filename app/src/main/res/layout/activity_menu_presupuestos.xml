<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5sp"
        tools:context=".MenuPresupuestos">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/prespuestosUnidad"
            app:cardCornerRadius="10sp"
            app:cardBackgroundColor="#A3A3A3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:padding="5sp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:textStyle="bold"
                    android:text="Nombre cliente:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textStyle="bold"
                    android:text="Numero factura:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textStyle="bold"
                    android:text="fecha de factura:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>


    </android.support.v7.widget.RecyclerView>

    <LinearLayout
            android:gravity=""
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="Buscar por numero de prupuesto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
                android:id="@+id/buscarXnumero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="Buscar por DNI/NIE/NIF cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
                android:id="@+id/buscarXidentificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="Buscar por fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
                android:id="@+id/buscarXfecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:layout_gravity="center|end"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:id="@+id/btnActualizarPrespuesto"
                android:text=" actualizar presupuesto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/btnBorrarPresupuesto"
                android:text="Borrar presupuesto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/btnMostrarPrespuesto"
                android:text="Mostrar presupuesto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>

