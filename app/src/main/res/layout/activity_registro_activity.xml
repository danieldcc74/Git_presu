<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10sp"
        tools:context=".Registro_activity">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Registro"
                  android:textStyle="bold"
                  android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center"
                  android:padding="30sp">
        <ImageButton android:layout_width="200px" android:layout_height="200px" android:id="@+id/reg_icon_sesion"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical">
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/reg_nombre"
                  android:hint="Nombre"/>
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/reg_apellidos"
                  android:hint="Apellidos"/>
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/reg_nombre_empresa"
                  android:hint="Nombre de la empresa"/>
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/reg_email" android:inputType="textEmailAddress"
                  android:hint="Correo Electronico"/>
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/reg_contrase単a" android:inputType="textPassword"
                  android:hint="Contrase単a"/>
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/reg_confirmar_contrase単a" android:inputType="textPassword"
                  android:hint="Confirmar contrase単a"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/btn_reg_volver" android:text="volver"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/btn_reg_registrarse"
                android:text="Registrase"/>
    </LinearLayout>

</LinearLayout>