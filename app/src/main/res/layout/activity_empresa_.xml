<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".Empresa_Activity">


    <TextView
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="Datos de la empresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <View
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="@android:color/black"/>
    <LinearLayout
            android:padding="5sp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        <TextView
                android:textStyle="bold"
                android:text="NIF / DNI / NIE "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <EditText

                android:paddingLeft="20sp"
                android:id="@+id/identificacionEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:textStyle="bold"
                android:text="Nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
                android:paddingLeft="20sp"
                android:id="@+id/nombreEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:textStyle="bold"
                android:text="Domicilio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
                android:paddingLeft="20sp"
                android:id="@+id/domicilioEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:textStyle="bold"
                android:text="Localidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
                android:paddingLeft="20sp"
                android:id="@+id/localidadEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:textStyle="bold"
                android:text="CÃ³digo postal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
                android:paddingLeft="20sp"
                android:id="@+id/codigoPostalEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/btnSiguienteAlCliente"
                android:hint="Siguiente"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>




</LinearLayout>